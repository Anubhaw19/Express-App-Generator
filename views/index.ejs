<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
        <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-CuOF+2SnTUfTwSZjCXf01h7uYhfOBuxIhGKPbfEJ3+FqH/s6cIFN9bGr1HmAg4fQ" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="../views/style.css">
  </head>
  <body>
    <h1 ><%= title %></h1>
    <p class="btn btn-primary ">Welcome to <%= title %></p>

    <table class="table table-info table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">name</th>
          <th scope="col">email</th>
          <th scope="col">branch</th>
          <th scope="col">roll</th>
          <th scope="col">phone</th>
          <th scope="col">date</th>
          <th scope="col">time</th>
        </tr>
      </thead>
      <tbody>
        <% records.forEach(function(row){%>
          <tr> 
             <th scope="row"><%= row._id %></td>  
             <td><%= row.name %></td>
             <td><%= row.email %></td>
             <td><%= row.branch %></td>
             <td><%= row.roll %></td>
             <td><%= row.phone %></td>
             <td><%= row.date %></td>
             <td><%= row.time %></td>
             
          </tr>
        <%})%>
      </tbody>
    </table>
    <!-- form for data insertion-->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-4 ">
          <div class=" border border-info mt-3 rounded login_form">
            <p class="h4 ml-1">Student Registration</p>
            <p class="text-muted h5 ml-1 bg-warning">register as student</p>
            <form  action="/" class="form-horizonta" role="form" method="POST">
              <div class="mb-2">
                <input type="text" name="name" class="form-control " placeholder="name">
              </div>
              <div class="mb-2">
                <input type="text" name="email" class="form-control" placeholder="email">
              </div>
              <div class="mb-2">
                <input type="text" name="branch" class="form-control " placeholder="branch">
              </div>
              <div class="mb-2">
                <input type="text" name="roll" class="form-control" placeholder="roll">
              </div>
              <div class="mb-2">
                <input type="text" name="phone" class="form-control " placeholder="phone">
              </div>
              <div class="mb-2">
                <input type="text" name="date" class="form-control" placeholder="date">
              </div>
              <div class="mb-2">
                <input type="text" name="time" class="form-control " placeholder="time">
              </div>
      
              <div >
                <input type="submit"  value="submit" name="submit" class="btn btn-primary m-1">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

      <!-- Option 1: Bootstrap Bundle with Popper.js -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-popRpmFF9JQgExhfw5tZT4I9/CI5e2QcuUZPOVXb1m7qUmeR2b50u+YFEYe1wgzy" crossorigin="anonymous"></script>
  </body>
</html>
